<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="ChatAppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:textAllCaps">false</item>
        <item name="colorPrimary">@color/blue_ed</item>
        <item name="colorPrimaryDark">@color/blue_ed</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorAccent">@color/mColorAccent</item>
        <item name="android:windowBackground">@color/base_bg</item>
        <!--  <item name="android:windowAnimationStyle">@android:style/Animation.Activity</item>-->
        <item name="android:windowAnimationStyle">@style/activityAnim</item>
        <!-- 设置底部导航栏半透明，默认false黑色，设置true半透明 -->
        <item name="android:windowTranslucentNavigation">true</item>
        <!-- Android 5.0+，设置状态栏全透明透明 -->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <!-- true: status栏的图标和文字为黑色；false: status栏的图标和文字为白色 -->
        <item name="android:windowLightStatusBar">true</item>

    </style>

    <!--启动页以前的-->
    <style name="ChatLauncher" parent="ChatAppTheme">
        <item name="android:windowBackground">@drawable/chat_splash_background</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:navigationBarColor">@color/trans</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <!-- Android 5.0+，设置状态栏全透明透明 -->
        <item name="android:windowFullscreen">true</item>
      <!--  <item name="android:windowAnimationStyle">@style/Animation_Splash</item>-->
        <item name="android:windowAnimationStyle">@style/Animation_Splash</item>
        <item name="android:windowTranslucentStatus">true</item> <!-- 设置状态栏半透明——解除注释 -->
        <item name="android:windowLayoutInDisplayCutoutMode" tools:targetApi="o_mr1">shortEdges
        </item>
    </style>


    <!--启动页-->
    <!-- https://developer.android.com/guide/topics/ui/splash-screen/migrate?hl=zh-cn -->
    <style name="ChatStarting" parent="Theme.SplashScreen">

        <!-- 向下兼容。================start-->
        <!-- 启动画面背景颜色 -->
        <item name="windowSplashScreenBackground">@android:color/white</item>
        <!-- 启动画面中心的图标 -->
       <!-- <item name="windowSplashScreenAnimatedIcon">@drawable/app_logo</item>-->
        <item name="windowSplashScreenAnimatedIcon">@drawable/white_radius</item>
        <!--指定成你的App原来的主题。这样，当SplashScreen结束时，你的主题就能够被复原，从而不会影响到你的App的主题外观。-->
        <item name="postSplashScreenTheme">@style/ChatLauncher</item>
        <!-- 向下兼容。 ==============end-->


        <!--android 12新增-->
        <!-- 设置图标的背景颜色。 -->
        <item name="windowSplashScreenIconBackgroundColor">@android:color/transparent</item>
        <!--<item name="android:windowBackground">@drawable/chat_splash_background</item>-->

        <!-- 动画图标必需 Google建议不超过1000毫秒。-->
        <item name="windowSplashScreenAnimationDuration">1000</item>
        <!-- 启动画面启动画面底部的图片。 -->
        <item name="android:windowSplashScreenBrandingImage" tools:targetApi="s">@drawable/ic_launch_bottom</item>
    </style>

    <style name="Theme.MyApplication.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.MyApplication.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


</resources>