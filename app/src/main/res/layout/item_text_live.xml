<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/iv_type"
        android:layout_width="@dimen/dp_20"
        android:layout_height="@dimen/dp_20"
        android:layout_marginStart="@dimen/dp_10"
        android:padding="@dimen/dp_4"
        tools:src="@drawable/icon_yellow"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_content"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/dp_2"
        android:textColor="@color/c_f5f5f5"
        android:textSize="@dimen/sp_12"
        app:layout_constraintEnd_toStartOf="@id/iv_logo"
        app:layout_constraintStart_toEndOf="@id/iv_type"
        app:layout_constraintTop_toTopOf="@id/iv_type"
        tools:text="重要时间" />

    <com.xcjh.base_lib.utils.view.CircleImageView
        android:id="@+id/iv_logo"
        android:layout_width="@dimen/dp_16"
        android:layout_height="@dimen/dp_16"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="@dimen/dp_20"
        tools:src="@drawable/icon_team"
        app:layout_constraintBottom_toBottomOf="@id/iv_type"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/iv_type" />

    <View
        android:id="@+id/lineView"
        android:layout_width="@dimen/dp_1"
        android:layout_height="0dp"
        android:layout_marginBottom="-20dp"
        android:background="@color/c_29283A"
        app:layout_constraintBottom_toBottomOf="@id/tv_content"
        app:layout_constraintEnd_toEndOf="@id/iv_type"
        app:layout_constraintStart_toStartOf="@id/iv_type"
        app:layout_constraintTop_toBottomOf="@id/iv_type" />
</androidx.constraintlayout.widget.ConstraintLayout>
