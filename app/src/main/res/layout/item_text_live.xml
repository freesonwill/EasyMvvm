<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingHorizontal="@dimen/dp_15">

    <ImageView
        android:id="@+id/iv_type"
        style="@style/matchResultImg"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@drawable/icon_yellow" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_content"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_10"
        android:layout_marginEnd="@dimen/dp_0"
        android:textColor="@color/c_d7d7e7"
        android:textSize="@dimen/sp_12"
        app:layout_constraintEnd_toStartOf="@id/iv_logo"
        app:layout_constraintStart_toEndOf="@id/iv_type"
        app:layout_constraintTop_toTopOf="@id/iv_type"
        tools:text="重要时间" />

    <com.xcjh.app.utils.nice.NiceImageView
        android:id="@+id/iv_logo"
        android:layout_height="@dimen/dp_20"
        android:layout_width="@dimen/dp_20"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@id/iv_type"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/iv_type"
        tools:src="@drawable/icon_team" />

    <View
        android:id="@+id/lineView"
        android:layout_width="@dimen/dp_0"
        android:layout_height="20dp"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@id/iv_type"
        app:layout_constraintTop_toBottomOf="@id/iv_type" />
</androidx.constraintlayout.widget.ConstraintLayout>
