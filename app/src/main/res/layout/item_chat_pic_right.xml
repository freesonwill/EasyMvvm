<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/dp_20"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tvtime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:textColor="@color/c_8a91a0"
        android:textSize="@dimen/sp_12"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginTop="@dimen/dp_12"
        android:orientation="horizontal">
        <ProgressBar
            android:id="@+id/google_progress"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:visibility="gone"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/ivpic"
            android:layout_gravity="center"/>
        <ImageView
            android:id="@+id/ivfaile"
            android:layout_width="@dimen/dp_30"
            android:layout_centerVertical="true"
            android:visibility="gone"
            android:background="@drawable/arrows_red_down"
            android:layout_toLeftOf="@id/ivpic"
            android:layout_height="@dimen/dp_30"/>
        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/ivpic"
            android:layout_width="150dp"
            android:adjustViewBounds="true"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/ivhead"
            android:layout_marginLeft="@dimen/dp_60"
            android:layout_marginRight="@dimen/dp_12"
            android:layout_toLeftOf="@id/ivhead"
            android:scaleType="centerInside"
            android:maxWidth="260dp"
            android:maxHeight="320dp"
            app:layout_constraintTop_toTopOf="@id/ivhead"
            android:layout_height="200dp"
            app:riv_corner_radius_bottom_left="8dp"
            app:riv_corner_radius_bottom_right="8dp"
            app:riv_corner_radius_top_left="8dp"
            app:riv_corner_radius_top_right="8dp" />


        <TextView
            android:id="@+id/tvpross"
            android:layout_width="wrap_content"
            android:layout_toStartOf="@id/ivpic"
            android:textColor="@color/white"
            android:layout_height="wrap_content"/>

        <com.xcjh.base_lib.utils.view.CircleImageView
            android:id="@+id/ivhead"
            android:layout_width="@dimen/dp_40"
            android:layout_height="@dimen/dp_40"
            android:layout_alignParentRight="true"

            android:src="@drawable/basketball" />
    </RelativeLayout>
</LinearLayout>