<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/c_07061d"
        android:orientation="vertical" >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="210dp"
            android:layout_marginBottom="@dimen/dp_28">
            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                app:srcCompat="@drawable/home_my_bg"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_24"
                android:layout_marginRight="@dimen/dp_24"
                android:layout_marginTop="70dp"
                android:orientation="horizontal">
            <com.xcjh.app.utils.nice.NiceImageView
                android:id="@+id/ivMyHead"
                android:layout_width="64dp"
                android:layout_height="64dp"
                app:border_width="@dimen/dp_2"
                android:scaleType="fitXY"
                app:border_color="@color/c_80fffff"
                app:srcCompat="@drawable/load_head"
                app:is_circle="true"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="12dp"
                    android:orientation="vertical">
                     <androidx.appcompat.widget.AppCompatTextView
                         android:id="@+id/txtMyName"
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:textSize="@dimen/sp_16"
                         android:textColor="@color/c_f5f5f5"
                         android:text="@string/my_txt_click_login"/>
                    <LinearLayout
                        android:id="@+id/iiIsShowLeve"
                        android:visibility="gone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_10"
                        android:orientation="horizontal">
                        <androidx.appcompat.widget.AppCompatImageView
                            android:id="@+id/ivMyLevel"
                            android:layout_width="30dp"
                            android:layout_height="20dp"
                            app:srcCompat="@drawable/level_yi"/>
                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/txtMyNum"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dp_8"
                            android:textColor="@color/c_f5f5f5"
                            android:textSize="@dimen/sp_12"
                            android:text="Lv.1 白银会员"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
            
            <RelativeLayout
                android:id="@+id/rlClickLevel"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_48"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="@dimen/dp_24"
                android:paddingLeft="@dimen/dp_16"
                android:paddingRight="@dimen/dp_16"
                android:background="@drawable/gradation_top8_1e285a">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:gravity="center"
                    android:orientation="horizontal">
                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/ivMyLevelAdd"
                        android:layout_width="30dp"
                        android:layout_height="20dp"
                        android:visibility="gone"
                        android:layout_marginRight="@dimen/dp_4"
                        app:srcCompat="@drawable/level_yi"/>
                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/txtMyTxt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:textColor="@color/c_8a91a0"

                        android:text="@string/my_txt_leve"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:gravity="center"
                    android:orientation="horizontal">
                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/txtMyView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/c_8a91a0"
                        android:textSize="@dimen/sp_12"
                        android:text="@string/my_txt_view"/>
                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/ivMyNext"
                        android:layout_width="@dimen/dp_16"
                        android:layout_height="@dimen/dp_16"
                        app:srcCompat="@drawable/icon_my_next_no"/>
                </LinearLayout>
            </RelativeLayout>
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="24dp"
            android:layout_marginLeft="@dimen/dp_24"
            android:orientation="vertical">
            <com.xcjh.app.utils.nice.NiceImageView
                android:id="@+id/ivMyAdvertising"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="99dp"
                android:scaleType="fitXY"
                android:layout_marginBottom="43dp"
                app:srcCompat="@drawable/app_bg"
                app:corner_radius="@dimen/dp_8"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="38dp"
                android:orientation="horizontal">
                <LinearLayout
                    android:id="@+id/llMyClickSubscribe"
                    android:layout_width="@dimen/dp_0"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:orientation="vertical">
                    <androidx.appcompat.widget.AppCompatImageView
                        android:layout_width="@dimen/dp_28"
                        android:layout_height="@dimen/dp_28"
                        android:scaleType="fitXY"
                        app:srcCompat="@drawable/ic_mine_subscription"/>
                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="11dp"
                        android:textSize="@dimen/sp_14"
                        android:textColor="@color/c_ffffff"
                        android:text="@string/my_txt_subscribe"/>

                </LinearLayout>
                <LinearLayout
                    android:id="@+id/llMyClickEvents"
                    android:layout_width="@dimen/dp_0"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:orientation="vertical">
                    <androidx.appcompat.widget.AppCompatImageView
                        android:layout_width="@dimen/dp_28"
                        android:layout_height="@dimen/dp_28"
                        android:scaleType="fitXY"
                        app:srcCompat="@drawable/ic_mine_act_center"/>
                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="11dp"
                        android:textSize="@dimen/sp_14"
                        android:textColor="@color/c_ffffff"
                        android:text="@string/events_txt_title"/>

                </LinearLayout>
                <LinearLayout
                    android:id="@+id/llMyClickFollow"
                    android:layout_width="@dimen/dp_0"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:orientation="vertical">
                    <androidx.appcompat.widget.AppCompatImageView
                        android:layout_width="@dimen/dp_28"
                        android:layout_height="@dimen/dp_28"
                        android:scaleType="fitXY"
                        app:srcCompat="@drawable/ic_mine_focus"/>
                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="11dp"
                        android:textSize="@dimen/sp_14"
                        android:textColor="@color/c_ffffff"
                        android:text="@string/follow_txt_title"/>

                </LinearLayout>
                <LinearLayout
                    android:id="@+id/llMyClickHistory"
                    android:layout_width="@dimen/dp_0"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:orientation="vertical">
                    <androidx.appcompat.widget.AppCompatImageView
                        android:layout_width="@dimen/dp_28"
                        android:layout_height="@dimen/dp_28"
                        android:scaleType="fitXY"
                        app:srcCompat="@drawable/ic_mine_history"/>
                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="11dp"
                        android:textSize="@dimen/sp_14"
                        android:textColor="@color/c_ffffff"
                        android:text="@string/viewing_txt_title"/>

                </LinearLayout>
            </LinearLayout>
            <RelativeLayout
                android:id="@+id/rlMyClickEdit"
                android:layout_width="match_parent"
                android:layout_height="44dp">
                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/c_ffffff"
                    android:textSize="@dimen/sp_14"
                    android:textStyle="bold"
                    android:layout_centerVertical="true"
                    android:text="@string/my_txt_edit_data"/>
                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="@dimen/dp_16"
                    android:layout_height="@dimen/dp_16"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    app:srcCompat="@drawable/ic_next"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/rlMyClickInvite"
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_height="44dp">
                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/c_ffffff"
                    android:textSize="@dimen/sp_14"
                    android:textStyle="bold"
                    android:layout_centerVertical="true"
                    android:text="@string/my_txt_invite"/>
                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="@dimen/dp_16"
                    android:layout_height="@dimen/dp_16"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    app:srcCompat="@drawable/ic_next"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/rlMyClickContact"
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_height="44dp">
                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/c_ffffff"
                    android:textSize="@dimen/sp_14"
                    android:textStyle="bold"
                    android:layout_centerVertical="true"
                    android:text="@string/contact_us"/>
                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="@dimen/dp_16"
                    android:layout_height="@dimen/dp_16"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    app:srcCompat="@drawable/ic_next"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/rlMyClickLogOut"
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/dp_10"
                android:visibility="gone"
                android:layout_height="44dp">
                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/c_ffffff"
                    android:textSize="@dimen/sp_14"
                    android:textStyle="bold"
                    android:layout_centerVertical="true"
                    android:text="@string/my_txt_out"/>
                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="@dimen/dp_16"
                    android:layout_height="@dimen/dp_16"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    app:srcCompat="@drawable/ic_next"/>
            </RelativeLayout>
        </LinearLayout>

    </LinearLayout>
</layout>