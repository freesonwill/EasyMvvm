<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

   <RelativeLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:background="@color/c_07061d">
        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="match_parent"
            android:layout_height="249dp"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/level_icon_bg"/>
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:orientation="vertical" >
           <include
               android:id="@+id/titleTop"
               layout="@layout/com_title_transparent" />
           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_marginLeft="@dimen/dp_24"
               android:layout_marginRight="@dimen/dp_24"
               android:orientation="horizontal">
               <com.xcjh.app.utils.nice.NiceImageView
                   android:id="@+id/ivLevelHead"
                   android:layout_width="@dimen/dp_64"
                   android:layout_height="@dimen/dp_64"
                   app:is_circle="true"
                   android:scaleType="fitXY"
                   app:srcCompat="@drawable/icon_level_head"/>
               <LinearLayout
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_marginLeft="@dimen/dp_12"
                   android:layout_gravity="center"
                   android:orientation="vertical">
                   <androidx.appcompat.widget.AppCompatTextView
                       android:id="@+id/txtLevelName"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:textColor="@color/c_f5f5f5"
                       android:textSize="@dimen/sp_16"
                       android:text="这是个名字"/>
                   <LinearLayout
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_marginTop="9dp"
                       android:orientation="horizontal">
                       <androidx.appcompat.widget.AppCompatImageView
                           android:id="@+id/ivIvLevel"
                           android:layout_width="@dimen/dp_30"
                           android:layout_height="@dimen/dp_15"
                           android:scaleType="fitXY"
                           android:layout_gravity="bottom"
                           app:srcCompat="@drawable/icon_level_yi"/>
                       <androidx.appcompat.widget.AppCompatTextView
                           android:id="@+id/txtLeve"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:textSize="12sp"

                           android:layout_marginLeft="@dimen/dp_8"
                           android:textColor="@color/c_f5f5f5"
                           android:text="等级"/>

                   </LinearLayout>

               </LinearLayout>
           </LinearLayout>
           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_marginLeft="@dimen/dp_24"
               android:layout_marginRight="@dimen/dp_24"
               android:layout_marginTop="@dimen/dp_32"
               android:paddingRight="@dimen/dp_13"
               android:paddingLeft="@dimen/dp_13"
               android:paddingTop="@dimen/dp_20"
               android:paddingBottom="@dimen/dp_20"
               android:gravity="center"
               android:orientation="vertical"
               android:background="@drawable/shape_r8_18152a">
               <com.skydoves.progressview.ProgressView
                   android:id="@+id/progressLevel"
                   android:layout_width="match_parent"
                   app:progressView_radius="60dp"
                   android:layout_height="8dp"
                   app:progressView_progress="40"
                   app:progressView_colorGradientStart="@color/c_c4cbd7"
                   app:progressView_colorGradientEnd="@color/c_8896ae"
                   app:progressView_colorBackground="@color/c_110f10"/>
               <RelativeLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_marginTop="@dimen/dp_16">
                   <androidx.appcompat.widget.AppCompatTextView
                       android:id="@+id/txtLevelShow"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:textColor="@color/c_ffffff"
                       android:textSize="@dimen/sp_14"
                       android:text="L1 黑铁"/>
                   <androidx.appcompat.widget.AppCompatTextView
                       android:id="@+id/txtLevelGrow"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:textSize="@dimen/sp_14"
                       android:textColor="@color/c_ffffff"
                       android:text="@string/level_txt_grow"
                       android:layout_alignParentRight="true"/>
               </RelativeLayout>
           </LinearLayout>
           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_marginRight="@dimen/dp_24"
               android:layout_marginLeft="@dimen/dp_24"
               android:layout_marginTop="@dimen/dp_30"
               android:orientation="vertical">
               <androidx.appcompat.widget.AppCompatTextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:textColor="@color/c_ffffff"
                   android:textSize="16sp"
                   android:text="@string/level_txt_task"/>
               <RelativeLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_marginTop="@dimen/dp_30">
                   <LinearLayout
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:orientation="vertical">
                       <androidx.appcompat.widget.AppCompatTextView
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:textSize="16sp"
                           android:textColor="@color/c_ffffff"
                           android:text="@string/level_txt_chat"/>
                       <androidx.appcompat.widget.AppCompatTextView
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:textSize="14sp"
                           android:textColor="@color/c_ffffff"
                           android:text="@string/level_txt_grow_add"/>

                   </LinearLayout>

                   <androidx.appcompat.widget.AppCompatTextView
                       android:id="@+id/txtLevelClickInteraction"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:textColor="@color/c_ffffff"
                       android:textSize="@dimen/sp_12"
                       android:layout_alignParentRight="true"
                       android:layout_centerVertical="true"
                       android:paddingLeft="@dimen/dp_16"
                       android:paddingRight="@dimen/dp_16"
                       android:paddingTop="@dimen/dp_6"
                       android:paddingBottom="@dimen/dp_6"
                       android:background="@drawable/shape_r4_6d48fe"
                       android:text="@string/level_txt_to_complete"/>

               </RelativeLayout>

               <RelativeLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_marginTop="@dimen/dp_30">
                   <LinearLayout
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:orientation="vertical">
                       <androidx.appcompat.widget.AppCompatTextView
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:textSize="16sp"
                           android:textColor="@color/c_ffffff"
                           android:text="@string/level_txt_watch"/>
                       <androidx.appcompat.widget.AppCompatTextView
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:textSize="14sp"
                           android:textColor="@color/c_ffffff"
                           android:text="@string/level_txt_grow_add"/>

                   </LinearLayout>

                   <androidx.appcompat.widget.AppCompatTextView
                       android:id="@+id/txtLevelClickWatch"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:textColor="@color/c_ffffff"
                       android:textSize="@dimen/sp_12"
                       android:layout_alignParentRight="true"
                       android:layout_centerVertical="true"
                       android:paddingLeft="@dimen/dp_16"
                       android:paddingRight="@dimen/dp_16"
                       android:paddingTop="@dimen/dp_6"
                       android:paddingBottom="@dimen/dp_6"
                       android:background="@drawable/shape_r4_6d48fe"
                       android:text="@string/level_txt_to_complete"/>

               </RelativeLayout>
           </LinearLayout>


       </LinearLayout>
   </RelativeLayout>
</layout>