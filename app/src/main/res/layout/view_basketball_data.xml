<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_r8"
        android:backgroundTint="@color/c_18152a"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_56"
            android:background="@drawable/shape_bg_tab_res">

            <com.xcjh.base_lib.utils.view.CircleImageView
                android:id="@+id/iv_icon_home"
                android:layout_width="@dimen/dp_16"
                android:layout_height="@dimen/dp_16"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/dp_15"
                android:src="@drawable/icon_team" />

            <TextView
                android:id="@+id/iv_name_home"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/dp_39"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_12" />

            <com.xcjh.base_lib.utils.view.CircleImageView
                android:id="@+id/iv_icon_away"
                android:layout_width="@dimen/dp_16"
                android:layout_height="@dimen/dp_16"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/dp_15"
                android:src="@drawable/icon_team" />

            <TextView
                android:id="@+id/iv_name_away"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/dp_41"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_12" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:background="@color/c_29283A" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_17"
                    android:layout_weight="1">

                    <com.xcjh.app.view.ProgressBarView
                        android:id="@+id/pgTwoPercent"
                        android:layout_width="@dimen/dp_40"
                        android:layout_height="@dimen/dp_40"
                        android:layout_centerHorizontal="true"
                        app:max="100"
                        app:progressValue="50"
                        app:ringColor="@color/c_6D48FE"
                        app:ringProgressColor="@color/c_fe4848"
                        app:ringWidth="@dimen/dp_5" />

                    <TextView
                        android:id="@+id/view_game_status_left"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_15"
                        android:layout_marginEnd="@dimen/dp_4"
                        android:layout_toStartOf="@+id/pgTwoPercent"
                        android:text="@string/_0"
                        android:textColor="@color/white"
                        android:textSize="@dimen/sp_10" />

                    <TextView
                        android:id="@+id/view_game_status_right"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dp_4"
                        android:layout_marginTop="@dimen/dp_15"
                        android:layout_toEndOf="@+id/pgTwoPercent"
                        android:text="@string/_0"
                        android:textColor="@color/white"
                        android:textSize="@dimen/sp_10" />

                    <TextView
                        android:id="@+id/tv_game_status_jg"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="@dimen/dp_45"
                        android:text="@string/two_s_percent"
                        android:textColor="@color/c_8a91a0"
                        android:textSize="@dimen/sp_10" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_17"
                    android:layout_weight="1">

                    <com.xcjh.app.view.ProgressBarView
                        android:id="@+id/pgThreePercent"
                        android:layout_width="@dimen/dp_40"
                        android:layout_height="@dimen/dp_40"
                        android:layout_centerHorizontal="true"
                        app:max="100"
                        app:progressValue="50"
                        app:ringColor="@color/c_6D48FE"
                        app:ringProgressColor="@color/c_fe4848"
                        app:ringWidth="@dimen/dp_5" />

                    <TextView
                        android:id="@+id/view_game_status_wx_left"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_15"
                        android:layout_marginEnd="@dimen/dp_4"
                        android:layout_toStartOf="@+id/pgThreePercent"
                        android:text="@string/_0"
                        android:textColor="@color/white"
                        android:textSize="@dimen/sp_10" />

                    <TextView
                        android:id="@+id/view_game_status_wx_right"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dp_4"
                        android:layout_marginTop="@dimen/dp_15"
                        android:layout_toEndOf="@+id/pgThreePercent"
                        android:text="@string/_0"
                        android:textColor="@color/white"
                        android:textSize="@dimen/sp_10" />

                    <TextView
                        android:id="@+id/tv_game_status_wx_jg"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="@dimen/dp_45"
                        android:text="@string/three_s_percent"
                        android:textColor="@color/c_8a91a0"
                        android:textSize="@dimen/sp_10" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_17"
                    android:layout_weight="1">

                    <com.xcjh.app.view.ProgressBarView
                        android:id="@+id/pgFq"
                        android:layout_width="@dimen/dp_40"
                        android:layout_height="@dimen/dp_40"
                        android:layout_centerHorizontal="true"
                        app:max="100"
                        app:progressValue="50"
                        app:ringColor="@color/c_6D48FE"
                        app:ringProgressColor="@color/c_fe4848"
                        app:ringWidth="@dimen/dp_5" />

                    <TextView
                        android:id="@+id/view_game_status_kql_left"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_15"
                        android:layout_marginEnd="@dimen/dp_4"
                        android:layout_toStartOf="@+id/pgFq"
                        android:text="@string/_0"
                        android:textColor="@color/white"
                        android:textSize="@dimen/sp_10" />

                    <TextView
                        android:id="@+id/view_game_status_kql_right"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dp_4"
                        android:layout_marginTop="@dimen/dp_15"
                        android:layout_toEndOf="@+id/pgFq"
                        android:text="@string/_0"
                        android:textColor="@color/white"
                        android:textSize="@dimen/sp_10" />

                    <TextView
                        android:id="@+id/tv_game_status_kql"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="@dimen/dp_45"
                        android:text="@string/fq"
                        android:textColor="@color/c_8a91a0"
                        android:textSize="@dimen/sp_10" />
                </RelativeLayout>
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_40"
                android:layout_marginTop="@dimen/dp_30">

                <TextView
                    android:id="@+id/tv_home_two_point"
                    android:layout_width="@dimen/dp_20"
                    android:layout_height="@dimen/dp_20"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/dp_20"
                    android:text="@string/_0"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_10" />

                <ProgressBar
                    android:id="@+id/pro_two_point"
                    style="@android:style/Widget.ProgressBar.Horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_5"
                    android:layout_marginStart="@dimen/dp_50"
                    android:layout_marginEnd="@dimen/dp_50"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/dp_15"
                    android:max="100"
                    android:progress="50"
                    android:progressDrawable="@drawable/hori_progress_bg" />

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/dp_23"
                    android:text="@string/efq"
                    android:textColor="@color/c_8a91a0"
                    android:textSize="@dimen/sp_10" />

                <TextView
                    android:id="@+id/tv_away_two_point"
                    android:layout_width="@dimen/dp_20"
                    android:layout_height="@dimen/dp_20"
                    android:layout_centerVertical="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="@dimen/dp_20"
                    android:text="@string/_0"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_10" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_40"
                android:layout_marginTop="@dimen/dp_20">

                <TextView
                    android:id="@+id/tv_home_three_point"
                    android:layout_width="@dimen/dp_20"
                    android:layout_height="@dimen/dp_20"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/dp_20"
                    android:text="@string/_0"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_10" />

                <ProgressBar
                    android:id="@+id/pro_three_point"
                    style="@android:style/Widget.ProgressBar.Horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_5"
                    android:layout_marginStart="@dimen/dp_50"
                    android:layout_marginEnd="@dimen/dp_50"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/dp_15"
                    android:max="100"
                    android:progress="50"
                    android:progressDrawable="@drawable/hori_progress_bg" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/dp_23"
                    android:text="@string/sfq"
                    android:textColor="@color/c_8a91a0"
                    android:textSize="@dimen/sp_10" />

                <TextView
                    android:id="@+id/tv_away_three_point"
                    android:layout_width="@dimen/dp_20"
                    android:layout_height="@dimen/dp_20"
                    android:layout_centerVertical="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="@dimen/dp_20"
                    android:text="@string/_0"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_10" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_40"
                android:layout_marginBottom="@dimen/dp_20"
                android:layout_marginTop="@dimen/dp_20">

                <TextView
                    android:id="@+id/tv_home_penalty"
                    android:layout_width="@dimen/dp_20"
                    android:layout_height="@dimen/dp_20"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/dp_20"
                    android:text="@string/_0"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_10" />

                <ProgressBar
                    android:id="@+id/pro_penalty"
                    style="@android:style/Widget.ProgressBar.Horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_5"
                    android:layout_marginStart="@dimen/dp_50"
                    android:layout_marginEnd="@dimen/dp_50"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/dp_15"
                    android:max="100"
                    android:progress="50"
                    android:progressDrawable="@drawable/hori_progress_bg" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/dp_23"
                    android:text="@string/fq"
                    android:textColor="@color/c_8a91a0"
                    android:textSize="@dimen/sp_10" />

                <TextView
                    android:id="@+id/tv_away_penalty"
                    android:layout_width="@dimen/dp_20"
                    android:layout_height="@dimen/dp_20"
                    android:layout_centerVertical="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="@dimen/dp_20"
                    android:text="@string/_0"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_10" />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
</layout>