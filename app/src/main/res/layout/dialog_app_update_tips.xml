<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:gravity="center"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/rlTop"
            android:layout_width="285dp"
            android:paddingBottom="@dimen/dp_20"
            android:layout_marginTop="70dp"
            android:background="@drawable/shape_r20_ffffff"
            android:layout_marginLeft="@dimen/dp_16"
            android:layout_marginRight="@dimen/dp_16"
            android:paddingLeft="@dimen/dp_20"
            android:paddingRight="@dimen/dp_20"
            android:paddingTop="90dp"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/txtUpdateTitle"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/c_34a853"
                android:textSize="@dimen/sp_18"
                android:layout_centerHorizontal="true"
                android:text="@string/app_update_title"/>
            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_15"
                android:textColor="@color/c_37373d"
                android:layout_marginTop="@dimen/dp_15"
                android:text="@string/app_update_content"/>
            
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/txtAppContent"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="@color/c_94999f"
                android:paddingTop="@dimen/dp_5"
                android:textSize="@dimen/sp_14"
                android:text="1、修改版本"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginTop="@dimen/dp_25">
                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/txtUpdateCommit"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textSize="@dimen/sp_18"
                    android:paddingRight="55dp"
                    android:paddingLeft="55dp"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:background="@drawable/shape_r61_34a853"
                    android:text="@string/update_update_now"
                    android:textColor="@color/c_f5f5f5"/>
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/llShow"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:visibility="gone"
                    android:layout_centerInParent="true">
                    <ProgressBar
                        android:id="@+id/pbUpdate"
                        android:layout_width="200dp"
                        android:layout_height="8dp"
                        app:layout_constraintRight_toLeftOf="@+id/txtUpdateNum"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toTopOf="@+id/txtUpdateNum"
                        app:layout_constraintBottom_toBottomOf="@+id/txtUpdateNum"
                        android:layout_centerHorizontal="true"
                        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                        android:progressDrawable="@drawable/rounded_horizontal"
                        android:orientation="horizontal"
                        android:max="100"/>
                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/txtUpdateNum"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        android:textSize="@dimen/sp_12"
                        android:text="100%"
                        android:layout_marginLeft="10dp"
                        android:textColor="@color/c_94999f"/>


                </androidx.constraintlayout.widget.ConstraintLayout>

            </RelativeLayout>

        </LinearLayout>

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="198dp"
            android:layout_height="150dp"
            android:layout_centerHorizontal="true"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/icon_update_yun"/>

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ivDelete"
            android:layout_below="@+id/rlTop"
            android:layout_width="@dimen/dp_20"
            android:layout_height="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_30"
            android:layout_centerHorizontal="true"
            app:srcCompat="@drawable/icon_app_update_delete"/>
    </RelativeLayout>


</RelativeLayout>