<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!--football-->
            <LinearLayout
                android:id="@+id/layout_football"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_16"
                android:layout_marginEnd="@dimen/dp_16"
                android:orientation="vertical"
                android:visibility="gone">

                <com.xcjh.app.view.balldetail.liveup.FootballLineupView
                    android:id="@+id/match_lineup"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginTop="@dimen/dp_16"
                    android:text="@string/ti"
                    android:textColor="@color/c_F5F5F5"
                    android:textSize="@dimen/sp_16" />

                <com.xcjh.app.view.balldetail.liveup.FootballDetailSubstituteView
                    android:id="@+id/match_table"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_10"
                    android:layout_marginBottom="@dimen/dp_30"
                    android:visibility="visible"/>
            </LinearLayout>

            <!--篮球-->
            <LinearLayout
                android:id="@+id/layout_basketball"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:layout_marginStart="@dimen/dp_16"
                android:layout_marginEnd="@dimen/dp_16"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp_36"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tvHomeName"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/dp_36"
                        android:background="@drawable/bg_btn_detail_tab"
                        android:paddingStart="@dimen/dp_20"
                        android:paddingEnd="@dimen/dp_20"
                        android:gravity="center"
                        android:textColor="@color/white"
                        android:textSize="@dimen/sp_14" />

                    <TextView
                        android:id="@+id/tvAwayName"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/dp_36"
                        android:layout_marginStart="@dimen/dp_12"
                        android:paddingStart="@dimen/dp_20"
                        android:paddingEnd="@dimen/dp_20"
                        android:background="@drawable/bg_btn_detail_tab"
                        android:gravity="center"
                        android:textColor="@color/white"
                        android:textSize="@dimen/sp_14" />
                </LinearLayout>

                <com.xcjh.app.view.balldetail.liveup.BasketballLineupView
                    android:id="@+id/view_basketball_home_lineup"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_16"/>

                <com.xcjh.app.view.balldetail.liveup.BasketballLineupView
                    android:id="@+id/view_basketball_away_lineup"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_16"
                    android:visibility="gone"/>
            </LinearLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</layout>