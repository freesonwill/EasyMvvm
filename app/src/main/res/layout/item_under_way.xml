<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="156dp"
    android:layout_height="100dp"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingBottom="@dimen/dp_12"
    android:layout_marginRight="12dp"
    android:id="@+id/llcClickRecommended"
    android:background="@drawable/shape_r8_5e49a4">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="26dp"
        android:paddingLeft="@dimen/dp_12"
        android:paddingRight="@dimen/dp_12">
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txtCompetition"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:textSize="10sp"
            android:textColor="@color/c_f5f5f5"
            android:text="中超"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:orientation="horizontal">
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/txtMatchStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="进行中 13"
                android:textSize="10sp"
                android:textStyle="bold"
                android:textColor="@color/c_fe4848"/>
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/txtMatchAnimation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="''"
                android:visibility="gone"
                android:textSize="10sp"
                android:textStyle="bold"
                android:textColor="@color/c_fe4848"/>
        </LinearLayout>


    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@drawable/horizontal_line"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_8"
        android:layout_marginRight="12dp">
        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginRight="@dimen/dp_15"
            android:orientation="horizontal">
            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/txtWayHome"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:scaleType="fitCenter"
               app:srcCompat="@drawable/main_icon"/>
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/txtHomeName"
                android:singleLine="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textColor="@color/c_f5f5f5"
                android:layout_marginLeft="@dimen/dp_8"
                android:text="上海申花"
               />

        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txtHomeScore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/c_f5f5f5"
            android:textSize="12sp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:text="0"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_8"
        android:layout_marginRight="12dp">
        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dp_15"
            android:gravity="center"
            android:orientation="horizontal">
            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/ivGuestIcon"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/main_icon"/>
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/txtGuestName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:singleLine="true"
                android:textColor="@color/c_f5f5f5"
                android:layout_marginLeft="@dimen/dp_8"
                android:text="上海申花上海申花上海申花上海申花上海申花" />

        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txtGuestScore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/c_f5f5f5"
            android:textSize="12sp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:text="0"/>
    </RelativeLayout>


</androidx.appcompat.widget.LinearLayoutCompat>