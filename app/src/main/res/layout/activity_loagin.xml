<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/base_color"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/ivBack"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_marginStart="@dimen/dp_4"
            android:onClick="finishTopClick"
            android:scaleType="centerCrop"
            android:src="@drawable/return_b"
            tools:ignore="UsingOnClickInXml" />

        <ImageView
            android:id="@+id/ivloge"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dp_30"
            android:onClick="finishTopClick"
            android:scaleType="centerCrop"
            android:src="@drawable/app_logo"
            tools:ignore="UsingOnClickInXml" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_24"
            android:layout_marginTop="47dp"
            android:layout_marginRight="@dimen/dp_24"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvphone"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/shape_r8_6d48fe"
                android:gravity="center"

                android:paddingTop="@dimen/dp_15"
                android:paddingBottom="@dimen/dp_15"
                android:text="@string/txt_phone_lagoin"

                android:textColor="@color/white"
                android:textSize="@dimen/sp_16"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvemail"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="13dp"
                android:layout_weight="1"
                android:background="@drawable/shape_r8_1a8a91a0"
                android:gravity="center"

                android:paddingTop="@dimen/dp_15"
                android:paddingBottom="@dimen/dp_15"
                android:text="@string/txt_email_login"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_16"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linphone"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_60"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/dp_12"
            android:layout_marginLeft="@dimen/dp_24"
            android:layout_marginRight="@dimen/dp_24"
            android:layout_marginTop="@dimen/dp_32"
            android:background="@drawable/shape_r8_1a8a91a0"
            android:paddingRight="@dimen/dp_12">

            <TextView
                android:id="@+id/tvgo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+86"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_16"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/ivgo"
                android:layout_width="@dimen/dp_16"
                android:layout_height="@dimen/dp_16"
                android:layout_marginLeft="2dp"
                android:src="@drawable/ic_arrow_down" />
            <View
                android:layout_width="@dimen/dp_1"
                android:background="@color/c_338A91A0"
                android:layout_marginLeft="@dimen/dp_12"
                android:layout_height="match_parent"/>
            <EditText
                android:id="@+id/edtphone"
                android:layout_width="match_parent"
                android:background="@null"
                android:textColor="@color/white"
                android:layout_marginLeft="@dimen/dp_12"
                android:hint="@string/txt_inputphone"
                android:textSize="@dimen/sp_16"
                android:textColorHint="@color/c_8a91a0"
                android:textStyle="bold"
                android:layout_height="wrap_content"/>

        </LinearLayout>
        <EditText
            android:id="@+id/edtemail"
            android:layout_width="match_parent"
            android:textColor="@color/white"
            android:paddingLeft="@dimen/dp_12"
            android:hint="@string/please_input_email_1"
            android:visibility="gone"
            android:background="@drawable/shape_r8_1a8a91a0"
            android:layout_marginLeft="@dimen/dp_24"
            android:layout_marginRight="@dimen/dp_24"
            android:layout_marginTop="@dimen/dp_32"
            android:textSize="@dimen/sp_16"
            android:textColorHint="@color/c_8a91a0"
            android:textStyle="bold"
            android:layout_height="@dimen/dp_60"/>
        <RelativeLayout

            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_60"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/dp_12"
            android:layout_marginLeft="@dimen/dp_24"
            android:layout_marginRight="@dimen/dp_24"
            android:layout_marginTop="@dimen/dp_32"
            android:background="@drawable/shape_r8_1a8a91a0"
            android:paddingRight="@dimen/dp_12">

            <EditText
                android:id="@+id/edtcode"
                android:layout_width="match_parent"
                android:background="@null"
                android:textColor="@color/white"
                android:layout_marginLeft="@dimen/dp_12"
                android:hint="@string/txt_inputcode"
                android:layout_toLeftOf="@id/tvgetcode"
                android:textSize="@dimen/sp_16"
                android:textColorHint="@color/c_8a91a0"
                android:textStyle="bold"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/tvgetcode"
                android:layout_width="wrap_content"
                android:textColor="@color/white"
                android:layout_marginLeft="@dimen/dp_12"
                android:text="@string/get_code"
                android:textSize="@dimen/sp_16"
                android:layout_alignParentRight="true"
                android:textColorHint="@color/c_8a91a0"
                android:textStyle="bold"
                android:layout_height="wrap_content"/>
        </RelativeLayout>
        <TextView
            android:id="@+id/tvlogin"
            android:layout_width="match_parent"
            android:textColor="@color/white"
            android:layout_marginLeft="@dimen/dp_24"
            android:layout_marginRight="@dimen/dp_24"
            android:text="@string/login_or_enroll"
            android:gravity="center"
            android:textSize="@dimen/sp_16"
            android:background="@drawable/shape_r8_6d48fe"
            android:layout_marginTop="@dimen/dp_30"

            android:layout_alignParentRight="true"
            android:textColorHint="@color/c_8a91a0"
            android:textStyle="bold"
            android:layout_height="@dimen/dp_60"/>
    </LinearLayout>
</layout>