<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/c_f2f3f7" >

        <include
            android:id="@+id/titleTop"
            layout="@layout/com_title" />
        <RelativeLayout
            android:id="@+id/rlSetPhone"
            android:layout_width="match_parent"
            android:layout_height="53dp"
            android:paddingLeft="@dimen/dp_10"
            android:paddingRight="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            android:background="@drawable/shape_water_whith_8">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:orientation="horizontal">
                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="33dp"
                    android:layout_height="33dp"
                    app:srcCompat="@drawable/number_icon_phone"/>
                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_14"
                    android:textColor="@drawable/txt_colour_black_selector"
                    android:layout_marginLeft="@dimen/dp_8"
                    android:text="@string/phone"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:gravity="center"
                android:layout_centerVertical="true">
                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/txtNumberPhone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:text="@string/number_txt_set_not"
                    android:textColor="@color/c_94999f"/>
                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/ivNumberPhoneIcon"
                    android:layout_width="5dp"
                    android:layout_height="@dimen/dp_10"
                    android:layout_marginLeft="@dimen/dp_10"
                    app:srcCompat="@drawable/wd_gengduo_icon"/>
            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rlSetMailbox"
            android:layout_width="match_parent"
            android:layout_height="53dp"
            android:paddingLeft="@dimen/dp_10"
            android:paddingRight="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            android:background="@drawable/shape_water_whith_8">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:orientation="horizontal">
                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="33dp"
                    android:layout_height="33dp"
                    app:srcCompat="@drawable/number_icon_mailbox"/>
                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_14"
                    android:textColor="@color/c_37373d"
                    android:layout_marginLeft="@dimen/dp_8"
                    android:text="@string/email"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:gravity="center"
                android:layout_centerVertical="true">
                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/txtNumberEmail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:text="@string/number_txt_set_not"
                    android:textColor="@color/c_94999f"/>
                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/ivNumberEmailIcon"
                    android:layout_width="5dp"
                    android:layout_height="@dimen/dp_10"
                    android:layout_marginLeft="@dimen/dp_10"
                    app:srcCompat="@drawable/wd_gengduo_icon"/>
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
</layout>