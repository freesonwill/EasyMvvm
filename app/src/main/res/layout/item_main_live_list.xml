<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:id="@+id/llLiveSpacing"
    android:layout_marginBottom="@dimen/dp_20"
    android:background="@drawable/shape_r8_261e49"
    android:layout_height="150dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="92dp">
        <com.xcjh.app.utils.nice.NiceImageView
            android:id="@+id/ivLiveBe"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:corner_top_left_radius="@dimen/dp_8"
            app:corner_top_right_radius="@dimen/dp_8"
            app:srcCompat="@drawable/bg_basketball_status"
            android:scaleType="centerCrop"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="29dp"
        android:layout_alignParentBottom="true">
        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/main_icon_overlay"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:gravity="center_vertical"
            android:paddingHorizontal="@dimen/dp_8"
            android:orientation="horizontal">
            <com.xcjh.app.utils.nice.NiceImageView
                android:id="@+id/ivLiveHead"
                android:layout_width="@dimen/dp_20"
                android:layout_height="@dimen/dp_20"
                android:scaleType="fitXY"
                app:is_circle="true"
                app:srcCompat="@drawable/default_anchor_icon"/>
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/txtLiveName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/c_f5f5f5"
                android:textSize="@dimen/sp_12"
                android:singleLine="true"
                android:layout_marginStart="@dimen/dp_8"
                tools:text="小小鱼"/>
            </LinearLayout>

        </RelativeLayout>
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/txtLiveIsBroadcast"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/sp_10"
        android:textColor="@color/c_ffffff"
        android:paddingRight="@dimen/dp_8"
        android:paddingLeft="@dimen/dp_8"
        android:paddingTop="3dp"
        android:background="@drawable/shape_r4_ff5151"
        android:paddingBottom="3dp"
        android:layout_marginEnd="@dimen/dp_4"
        android:layout_marginTop="@dimen/dp_4"
        android:layout_alignParentEnd="true"
        android:visibility="gone"
        android:text="@string/main_txt_on_the_air"/>


    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/dp_8"
        android:layout_marginRight="@dimen/dp_8"
        android:paddingTop="@dimen/dp_8"
        android:orientation="vertical">
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txtLiveTeam"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/c_f5f5f5"
            android:textSize="@dimen/sp_12"
            android:singleLine="true"
            tools:text="阿贾克斯 VS 顿涅茨克矿工"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_4">
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/txtLiveCompetition"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:singleLine="true"
                android:layout_marginEnd="@dimen/dp_40"
                tools:text="中超"
                android:textColor="@color/c_8a91a0"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:orientation="horizontal">
                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/txtLiveHeat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    tools:text="9999+"
                    android:textColor="@color/c_8a91a0"/>
                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="@dimen/dp_10"
                    android:layout_height="@dimen/dp_15"
                    android:layout_marginStart="@dimen/dp_4"
                    app:srcCompat="@drawable/ic_fire_normal"/>

            </LinearLayout>

        </RelativeLayout>
    </LinearLayout>

</LinearLayout>