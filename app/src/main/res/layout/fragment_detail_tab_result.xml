<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.xcjh.app.view.hover.ZbScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <com.xcjh.app.view.hover.StickyLinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <com.xcjh.app.view.balldetail.result.FootballDataView
                    android:id="@+id/viewFootballStatus"
                    android:visibility="visible"
                    android:layout_margin="@dimen/dp_12"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <LinearLayout
                    android:visibility="gone"
                    android:id="@+id/lltFootball"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingVertical="@dimen/dp_10"
                    android:layout_marginHorizontal="@dimen/dp_16"
                    app:isSticky="true"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/btn_text_live"
                        android:layout_width="@dimen/dp_100"
                        android:layout_height="@dimen/dp_36"
                        android:background="@drawable/bg_btn_detail_tab"
                        android:gravity="center"
                        android:text="@string/text_live"
                        android:textColor="@color/c_F5F5F5"
                        android:textSize="@dimen/sp_14" />

                    <TextView
                        android:id="@+id/btn_import_event"
                        android:layout_width="@dimen/dp_100"
                        android:layout_height="@dimen/dp_36"
                        android:layout_marginStart="@dimen/dp_12"
                        android:background="@drawable/bg_btn_detail_tab"
                        android:gravity="center"
                        android:text="@string/import_event"
                        android:textColor="@color/c_F5F5F5"
                        android:textSize="@dimen/sp_14" />
                </LinearLayout>


            </com.xcjh.app.view.hover.StickyLinearLayout>
            <com.xcjh.app.view.ViewPager2Container
                android:id="@+id/vpContainer"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <androidx.core.widget.NestedScrollView
                    android:id="@+id/lltBasketball"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="@dimen/dp_12"
                        android:orientation="vertical">

                        <com.xcjh.app.view.balldetail.result.BasketballTableView
                            android:id="@+id/view_basketball_table"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>

                        <com.xcjh.app.view.balldetail.result.BasketballDataView
                            android:id="@+id/view_basketball_data"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_20" />
                    </LinearLayout>
                </androidx.core.widget.NestedScrollView>
                <androidx.viewpager2.widget.ViewPager2
                    android:id="@+id/viewPager"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fadeScrollbars="false" />

            </com.xcjh.app.view.ViewPager2Container>

        </LinearLayout>
    </com.xcjh.app.view.hover.ZbScrollView>
</layout>