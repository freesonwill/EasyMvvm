<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/dp_16"
            android:layout_marginEnd="@dimen/dp_16"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/layout_football"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:visibility="gone">

                <com.xcjh.app.view.balldetail.result.FootballDataView
                    android:id="@+id/view_football_status"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp_36"
                    android:layout_marginTop="@dimen/dp_16"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/btn_text_live"
                        android:layout_width="@dimen/dp_100"
                        android:layout_height="@dimen/dp_36"
                        android:background="@drawable/bg_btn_detail_tab"
                        android:gravity="center"
                        android:text="@string/text_live"
                        android:textColor="@color/c_F5F5F5"
                        android:textSize="@dimen/sp_14" />

                    <TextView
                        android:id="@+id/btn_import_event"
                        android:layout_width="@dimen/dp_100"
                        android:layout_height="@dimen/dp_36"
                        android:layout_marginStart="@dimen/dp_12"
                        android:background="@drawable/bg_btn_detail_tab"
                        android:gravity="center"
                        android:text="@string/import_event"
                        android:textColor="@color/c_F5F5F5"
                        android:textSize="@dimen/sp_14" />
                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="@dimen/dp_16"
                    android:background="@drawable/shape_chat_input">

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rcvTextLive"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:minHeight="200dp"
                        android:layout_marginBottom="@dimen/dp_15"
                        android:layout_marginTop="@dimen/dp_15"
                        android:overScrollMode="never"/>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rcvImportEvent"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:minHeight="200dp"
                        android:layout_marginBottom="@dimen/dp_15"
                        android:layout_marginTop="@dimen/dp_15"
                        android:overScrollMode="never"
                        android:visibility="gone"/>
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_basketball"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:visibility="gone">

                <com.xcjh.app.view.balldetail.result.BasketballTableView
                    android:id="@+id/view_basketball_table"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <com.xcjh.app.view.balldetail.result.BasketballDataView
                    android:id="@+id/view_basketball_data"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_10"
                    android:layout_marginBottom="@dimen/dp_30"/>
            </LinearLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</layout>