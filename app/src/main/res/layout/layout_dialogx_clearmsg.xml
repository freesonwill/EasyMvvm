<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"

    android:paddingLeft="@dimen/dp_30"
    android:paddingRight="@dimen/dp_30"
    android:paddingTop="@dimen/dp_30"

    android:layout_height="wrap_content">
    <TextView
        android:layout_width="wrap_content"
        android:textColor="@color/c_F5F5F5"

        android:gravity="center_horizontal"
        android:textSize="@dimen/sp_16"
        android:textStyle="bold"
        android:text="@string/txt_clear_msg"
        android:layout_height="wrap_content"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/dp_24"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tvcancle"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:textColor="@color/c_8a91a0"

            android:paddingTop="@dimen/dp_12"
            android:paddingBottom="@dimen/dp_12"

            android:gravity="center"
            android:background="@drawable/shape_r10_232732"
            android:textSize="@dimen/sp_16"
            android:textStyle="bold"
            android:text="@string/cancel"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tvsure"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_16"
            android:textStyle="bold"
            android:layout_marginLeft="@dimen/dp_15"
            android:background="@drawable/shape_r10_6d48fe"
            android:paddingTop="@dimen/dp_12"
            android:paddingBottom="@dimen/dp_12"

            android:gravity="center"
            android:text="@string/ensure"
            android:layout_height="wrap_content"/>
    </LinearLayout>

</LinearLayout>