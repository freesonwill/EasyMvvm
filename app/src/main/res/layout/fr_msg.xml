<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:paddingLeft="12dp"
        android:paddingTop="55dp"

        android:orientation="vertical">


        <ImageView

            android:layout_width="@dimen/dp_20"
            app:layout_constraintTop_toTopOf="@id/slide"
            app:layout_constraintBottom_toBottomOf="@id/slide"
            app:layout_constraintRight_toRightOf="parent"
            android:background="@drawable/ic_clear"
            android:layout_marginRight="16dp"
            android:layout_height="@dimen/dp_20"/>
        <com.flyco.tablayout.SlidingTabLayout
            android:id="@+id/slide"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:tl_indicator_corner_radius="20dp"
            android:layout_marginTop="55dp"
            app:tl_textBold="BOTH"
            android:paddingBottom="4dp"
            android:visibility="gone"
            app:tl_tab_space_equal="true"
            app:tl_tab_padding="14dp"
            app:tl_indicator_height="2dp"
            app:tl_indicator_color="@color/c_34a853"
            app:tl_textsize="16sp"
            android:textColor="@color/c_94999f"
            app:tl_textSelectColor="@color/c_37373d"
            app:tl_indicator_width_equal_title="true"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="MissingClass" />
        <net.lucode.hackware.magicindicator.MagicIndicator
            android:id="@+id/magicIndicator"
            android:layout_width="122dp"

            android:layout_marginBottom="@dimen/dp_8"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_height="@dimen/dp_50"
            android:layout_centerHorizontal="true" />
        <TextView
            android:id="@+id/ivclear"
            android:layout_width="wrap_content"
            android:text="@string/all_read"
            android:textColor="@color/c_94999f"
            android:textSize="11sp"
            android:textStyle="bold"
            android:paddingRight="8dp"
            android:paddingLeft="8dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:layout_marginRight="@dimen/dp_12"
            android:background="@drawable/shape_25_94999f"
            app:layout_constraintBottom_toBottomOf="@id/magicIndicator"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/magicIndicator"
            android:layout_height="wrap_content"/>
        <LinearLayout
            android:id="@+id/linsre"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@id/slide"
            android:background="@drawable/shape8_18152a"
            android:layout_marginRight="@dimen/dp_16"
            android:layout_marginLeft="@dimen/dp_16"
            android:gravity="center_vertical"
            android:layout_marginTop="18dp"
            android:paddingTop="13dp"
            android:visibility="gone"
            android:paddingLeft="@dimen/dp_12"
            android:paddingBottom="13dp"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="@dimen/dp_20"
                android:background="@drawable/ic_search_small"
                android:layout_height="@dimen/dp_20"/>
            <TextView
                android:id="@+id/tvseacher"
                android:layout_width="match_parent"
                android:hint="@string/txt_ser_his"
                android:background="@null"
                android:textSize="@dimen/sp_12"
                android:textColorHint="@color/c_8a91a0"
                android:layout_height="wrap_content"/>
            
        </LinearLayout>
        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/vp"
            android:layout_width="match_parent"
            app:layout_constraintTop_toBottomOf="@id/magicIndicator"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="30dp"
            android:layout_height="0dp"/>


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
