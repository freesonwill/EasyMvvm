<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/base_color"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/ivclear"
            android:layout_width="@dimen/dp_20"
            app:layout_constraintTop_toTopOf="@id/slide"
            app:layout_constraintBottom_toBottomOf="@id/slide"
            app:layout_constraintRight_toRightOf="parent"
            android:background="@drawable/ic_clear"
            android:layout_marginRight="16dp"
            android:layout_height="@dimen/dp_20"/>
        <com.flyco.tablayout.SlidingTabLayout
            android:id="@+id/slide"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:tl_indicator_corner_radius="20dp"
            android:layout_marginTop="55dp"
            app:tl_textBold="BOTH"
            android:paddingBottom="4dp"
            app:tl_tab_space_equal="true"
            app:tl_tab_padding="14dp"
            app:tl_indicator_height="2dp"
            app:tl_textsize="18sp"
            app:tl_textSelectColor="@color/white"
            app:tl_indicator_width_equal_title="true"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="MissingClass" />
        <LinearLayout
            android:id="@+id/linsre"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@id/slide"
            android:background="@drawable/shape8_18152a"
            android:layout_marginRight="@dimen/dp_16"
            android:layout_marginLeft="@dimen/dp_16"
            android:gravity="center_vertical"
            android:layout_marginTop="18dp"
            android:paddingTop="13dp"
            android:paddingLeft="@dimen/dp_12"
            android:paddingBottom="13dp"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="@dimen/dp_20"
                android:background="@drawable/ic_search_small"
                android:layout_height="@dimen/dp_20"/>
            <TextView
                android:id="@+id/tvseacher"
                android:layout_width="match_parent"
                android:hint="@string/txt_ser_his"
                android:background="@null"
                android:textSize="@dimen/sp_12"
                android:textColorHint="@color/c_8a91a0"
                android:layout_height="wrap_content"/>
            
        </LinearLayout>
        <com.xcjh.app.view.ViewPagerNoScoll
            android:id="@+id/vp"
            android:layout_width="match_parent"
            app:layout_constraintTop_toBottomOf="@id/linsre"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_height="0dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
