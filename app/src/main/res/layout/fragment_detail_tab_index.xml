<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.xcjh.app.view.hover.ZbScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.xcjh.app.view.hover.StickyLinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <View
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:background="@color/yellow_color_FF"
                    android:layout_height="200dp" />
                <!-- isSticky布局 -->
                <LinearLayout
                    android:id="@+id/stickyView"
                    app:isSticky="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:paddingVertical="@dimen/dp_5"
                    android:background="@color/trans"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tvTabIndexSf"
                        android:layout_width="@dimen/dp_100"
                        android:layout_height="@dimen/dp_36"
                        android:background="@drawable/bg_btn_detail_tab"
                        android:gravity="center"
                        android:text="@string/win_loss"
                        android:textColor="@color/white"
                        android:textSize="@dimen/sp_14" />

                    <TextView
                        android:id="@+id/tvTabIndexRq"
                        android:layout_width="@dimen/dp_100"
                        android:layout_height="@dimen/dp_36"
                        android:layout_marginStart="@dimen/dp_12"
                        android:background="@drawable/bg_btn_detail_tab"
                        android:gravity="center"
                        android:text="@string/handicap"
                        android:textColor="@color/white"
                        android:textSize="@dimen/sp_14" />

                    <TextView
                        android:id="@+id/tvTabIndexJq"
                        android:layout_width="@dimen/dp_100"
                        android:layout_height="@dimen/dp_36"
                        android:layout_marginStart="@dimen/dp_12"
                        android:background="@drawable/bg_btn_detail_tab"
                        android:gravity="center"
                        android:text="@string/goal_num"
                        android:textColor="@color/white"
                        android:textSize="@dimen/sp_14" />
                </LinearLayout>
                <!-- 布局 -->

            </com.xcjh.app.view.hover.StickyLinearLayout>

            <com.xcjh.app.view.ViewPager2Container
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <androidx.viewpager2.widget.ViewPager2
                    android:id="@+id/viewPager"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fadeScrollbars="false" />

            </com.xcjh.app.view.ViewPager2Container>
        </LinearLayout>
    </com.xcjh.app.view.hover.ZbScrollView>

</layout>