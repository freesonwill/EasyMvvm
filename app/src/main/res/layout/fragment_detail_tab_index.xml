<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/lay_tab_index_football"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_16"
                android:layout_marginEnd="@dimen/dp_16"
                android:visibility="visible"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp_36"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tvTabIndexSf"
                        android:layout_width="@dimen/dp_100"
                        android:layout_height="@dimen/dp_36"
                        android:background="@drawable/bg_btn_detail_tab"
                        android:gravity="center"
                        android:text="@string/win_loss"
                        android:textColor="@color/white"
                        android:textSize="@dimen/sp_14" />

                    <TextView
                        android:id="@+id/tvTabIndexRq"
                        android:layout_width="@dimen/dp_100"
                        android:layout_height="@dimen/dp_36"
                        android:layout_marginStart="@dimen/dp_12"
                        android:background="@drawable/bg_btn_detail_tab"
                        android:gravity="center"
                        android:text="@string/handicap"
                        android:textColor="@color/white"
                        android:textSize="@dimen/sp_14" />

                    <TextView
                        android:id="@+id/tvTabIndexJq"
                        android:layout_width="@dimen/dp_100"
                        android:layout_height="@dimen/dp_36"
                        android:layout_marginStart="@dimen/dp_12"
                        android:background="@drawable/bg_btn_detail_tab"
                        android:gravity="center"
                        android:text="@string/goal_num"
                        android:textColor="@color/white"
                        android:textSize="@dimen/sp_14" />
                </LinearLayout>

                <com.xcjh.app.view.balldetail.index.FootballMultiTableView
                    android:id="@+id/viewSFTable"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_16" />

                <com.xcjh.app.view.balldetail.index.FootballTableView
                    android:id="@+id/viewRQTable"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_16"
                    android:visibility="gone"/>

                <com.xcjh.app.view.balldetail.index.FootballTableView
                    android:id="@+id/viewJQTable"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_16"
                    android:visibility="gone"/>
            </LinearLayout>

