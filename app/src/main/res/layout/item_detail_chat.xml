<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/lltItem"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingHorizontal="@dimen/dp_16"
    android:paddingVertical="@dimen/dp_8">

    <com.lihang.ShadowLayout
        android:id="@+id/sltLevel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:hl_cornerRadius="@dimen/dp_4"
        app:hl_shadowHidden="true"
        app:hl_layoutBackground="@color/trans">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_type"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_22"
            android:gravity="center"
            android:minWidth="@dimen/dp_40"
            android:paddingHorizontal="@dimen/dp_8"
            android:textSize="@dimen/sp_10"
            android:textColor="@color/c_v2"
            tools:text="v1黄铜" />

    </com.lihang.ShadowLayout>


    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_12"
        android:textColor="@color/c_f5f5f5"
        android:textSize="@dimen/sp_14"
        tools:text="123" />
    <ImageView
        android:visibility="gone"
        android:id="@+id/ivImage"
        android:layout_width="200dp"
        android:layout_height="240dp"/>

</LinearLayout>