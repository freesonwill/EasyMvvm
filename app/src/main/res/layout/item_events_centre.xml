<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/llEventsClick"
        android:layout_marginTop="@dimen/dp_24"
        android:orientation="horizontal">
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ivNewsIcon"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:scaleType="centerCrop"
            android:layout_centerVertical="true"
            app:srcCompat="@drawable/load_square" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_16"
            android:orientation="vertical">
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/txtEventsTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_16"
                android:singleLine="true"
                android:ellipsize="end"
                android:textStyle="bold"
                android:text="标题标题标题标题标题标题"
                android:textColor="@color/c_ffffff"/>
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/txtEventsTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_14"
                android:textColor="@color/c_ffffff"
                android:singleLine="true"
                android:ellipsize="end"
                android:layout_marginTop="12dp"
                android:text="2023-07-03 12:55发布"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1"
                    android:layout_marginTop="@dimen/dp_24"
                    android:background="@color/c_18152A"/>
        </LinearLayout>


    </LinearLayout>


</LinearLayout>