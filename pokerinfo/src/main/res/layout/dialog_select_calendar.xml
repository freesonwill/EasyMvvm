<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_24"
        android:layout_marginBottom="@dimen/dp_16"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvMonth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_24"
            android:text="August 2023"
            android:textColor="@color/c_main_txt"
            android:textSize="@dimen/sp_14"
            android:textStyle="bold" />

        <View
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_0"
            android:layout_weight="1" />

        <ImageView
            android:id="@+id/ivPre"
            android:layout_width="@dimen/dp_30"
            android:layout_height="24dp"
            android:padding="@dimen/dp_5"
            android:src="@drawable/ic_add" />

        <ImageView
            android:id="@+id/ivNext"
            android:layout_width="@dimen/dp_30"
            android:layout_height="24dp"
            android:layout_marginStart="@dimen/dp_15"
            android:layout_marginEnd="@dimen/dp_16"
            android:padding="@dimen/dp_5"
            android:src="@drawable/ic_add" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#4D000000"
        android:visibility="gone" />

    <com.haibin.calendarview.CalendarView
        android:id="@+id/calendarView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_24"
        android:background="#fff"
        app:calendar_height="36dp"
        app:calendar_padding="10dp"
        app:current_month_text_color="@color/c_main_txt"
        app:day_text_size="12sp"
        app:max_select_range="-1"
        app:max_year="2025"
        app:min_select_range="-1"
        app:min_year="2023"
        app:month_view="com.xcjh.tpInfo.view.range_calendar.CustomRangeMonthView"
        app:month_view_show_mode="mode_only_current"
        app:other_month_text_color="#1222"
        app:select_mode="range_mode"
        app:selected_text_color="@color/c_main_txt"
        app:selected_theme_color="@color/select_color"
        app:week_background="#fff"
        app:week_text_color="@color/c_main_txt"
        app:week_text_size="12sp" />

</LinearLayout>