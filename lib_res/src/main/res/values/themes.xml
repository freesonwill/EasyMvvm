<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Android_frame" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="App.Theme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:textAllCaps">false</item>
        <item name="colorPrimary">@color/blue_ed</item>
        <item name="colorPrimaryDark">@color/blue_ed</item>
        <item name="colorOnPrimary">@color/white</item>


        <item name="colorAccent">@color/c_37373d</item>
        <item name="android:windowBackground">@color/base_bg</item>
        <!-- 动画-->
        <item name="android:windowAnimationStyle">@style/activityAnim</item>

        <!-- 设置底部导航栏半透明，默认false黑色，设置true半透明 -->
        <item name="android:windowTranslucentNavigation">true</item>
        <!-- Android 5.0+，设置状态栏全透明透明 -->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <!-- true: status栏的图标和文字为黑色；false: status栏的图标和文字为白色 -->
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="activityAnim">
        <!--打开新活动时，这是在下一个活动（正在进入屏幕）上运行的动画-->
        <item name="android:activityOpenEnterAnimation">@anim/translate_right_to_center</item>
        <!--打开新活动时，这是在上一个活动（正在退出屏幕）上运行的动画-->
        <item name="android:activityOpenExitAnimation">@anim/translate_center_to_left</item>
        <!--关闭当前活动时，这是在下一个活动（正在进入屏幕）上运行的动画-->
        <item name="android:activityCloseEnterAnimation">@anim/translate_left_to_center</item>
        <!--关闭当前活动时，这是在当前活动（退出屏幕）上运行的动画-->
        <item name="android:activityCloseExitAnimation">@anim/translate_center_to_right</item>
    </style>


</resources>